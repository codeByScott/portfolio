<% content_for :title do %>
  Development Articles
<% end %>

<article class="small-12 medium-10 medium-centered large-8 columns">
  <h1 class="basic-title">My Articles</h1>
  <% if @articles.count > 0 %>
  <ul class="article-list" id="article-list">
    <% @articles.each do |article| %>
      <li>
        <h2 class="article-title">
          <%= link_to article.title, article_path(article) %>
        </h2>
        <p class="meta">
          <time class="pubdate updated" datetime="<%= article.created_at %>">
            <%= article.created_at.strftime("%B %e, %Y ") %>
          </time>
          <span class="disqus-comment-count" data-disqus-identifier="<%= article.id %>">0</span>
        </p>
        <p class="article-content">
          <%= markdown article.text.truncate(500) %>
        </p>
      </li>
    <% end %>
  </ul>
  <% else %>
    <p>There are currently no articles.</p>
  <% end %>
</article>


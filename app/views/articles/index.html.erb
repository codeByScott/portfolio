<div class="row">
  <article class="small-6 large-centered columns home">
    <h1 class="title">Recent Articles</h1>
    
    <ul class="item-list" id="articles-list">
      <% @articles.each do |article| %>
        <li>
          <h2 class="item-title"><%= article.title %></h2>
          <p class="meta">
            <time class="pubdate updated" datetime="">
              <%= article.created_at.strftime("%B %e, %Y ") %>
            </time>
            <%= link_to '5 comments', article_path(article),
                                      class: "comment-count" %>
          </p>
          <p>
            <%= article.text %>
          </p>
          <%= link_to 'Show', article_path(article) %>
          <%= link_to 'Edit', edit_article_path(article) %>
          <%= link_to 'Destroy', article_path(article), 
                                   method: :delete, 
                                   data: { confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    </ul>
  </article>
</div>

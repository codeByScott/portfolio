<header class="header">
  <a href="/"><h1 class="headline">Code <small>by Scott</small></h1></a>
  
  <ul class="topnav" id="responsiveNav">
    <li>
      <%= link_to 'Home', root_path, 
          class: "#{'is-active' if current_page?(root_path)}" %>
    </li>

    <li>
      <%= link_to 'Articles', articles_path, 
          class: "#{'is-active' if current_page?(articles_path)}" %>
    </li>

    <li>
      <%= link_to 'Projects', projects_path, 
          class: "#{'is-active' if current_page?(projects_path)}" %>
    </li>

    <li>
      <%= link_to 'About', about_path, 
          class: "#{'is-active' if current_page?(about_path)}" %>
    </li>

    <li>
      <%= link_to 'Contact', new_contact_path, 
          class: "#{'is-active' if current_page?(new_contact_path)}" %>
    </li>

    <% if logged_in? %>
      <li>
        <%= link_to 'Logout', logout_path, method: :delete %>
      </li>
    <% end %>

    <li class="icon">
      <a href="javascript:void(0);" style="font-size: 1.5rem;" 
          onclick="responsive_nav()">&#9776;
      </a>
    </li>
    
  </ul>
</header>
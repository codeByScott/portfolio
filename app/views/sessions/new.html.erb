<% provide(:title, "Log in") %>

<div class="row">
  <div class="medium-6 medium-offset-3 column">
    <h1>Log in</h1>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "hollow button" %>
    <% end %>
  </div>
</div>